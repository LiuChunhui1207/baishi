/* pages/about/index.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: orangered;
}

.usermotto {
  margin-top: 40px;
  text-align: center;
}

.user-motto {
  font-family: sans-serif;
  font-size: xx-small;
  color: #005bae;
}

.description {
  bottom: 0;
  text-align: center;
}

.about-description {
  font-family: sans-serif;
  font-size: x-small;
  color: darkgrey;
}